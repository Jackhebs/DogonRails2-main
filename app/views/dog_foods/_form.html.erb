  </div>

  <div class="field form-group">
    <%= form.label :food_id %>
    <%= form.select :food_id, options_for_select(Food.all.order(name: :asc).map {|food| [food.name, food.id]}), class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
