<%= form_with(model: @dog_food) do |form| %>
  <% if @dog_food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dog_food.errors.count, "error") %> prohibited this dog_food from being saved:</h2>

      <ul>
        <% @dog_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :dog_id %>
