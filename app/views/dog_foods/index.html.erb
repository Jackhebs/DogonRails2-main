<p id="notice"><%#= notice %></p>

<h1>Dog Foods</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Dog</th>
      <th>ID</th>
      <th>Food</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dog_foods.each do |dog_food| %>
      <tr>
        <td><%= dog_food.dog.name %></td>
        <td><%=dog_food.dog.id %></td>
        <td><%= dog_food.food.name %></td>
        <td><%=dog_food.food.id %></td>
        <td><%= link_to 'Show', dog_food, class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Edit', edit_dog_food_path(dog_food), class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', dog_food, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog Food', new_dog_food_path, class:"btn btn-secondary" %>
