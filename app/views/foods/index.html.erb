<h1>Foods</h1>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th>Type</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%=food.id %></td>
        <td><%= food.food_type %></td>
        <td><%= food.weight %></td>
        <td><%= link_to 'Show', food, class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Edit', edit_food_path(food), class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food', new_food_path, class: "btn btn-secondary" %>
