<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :name %>
    <%= form.text_field :name,class:"form-control",placeholder:"Name" %>
  </div>

  <div class="field form-group">
    <% form.label :food_type %>
    <%= form.select :food_type, options_for_select(Food.food_types.map {|k, _v| [k.humanize.capitalize, k]}) %>
  </div>

  <div class="field form-group">
    <% form.label :weight %>
    <%= form.text_field :weight, class:"form-control",placeholder:"Weight" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
